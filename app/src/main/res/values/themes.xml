<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_dark</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>

        <item name="android:textColor">@color/text_primary</item>
        <item name="textAppearanceBodyMedium">@color/text_secondary</item>

        <item name="materialButtonStyle">@style/MyButtonStyle</item>

    </style>

    <style name="MyButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">14dp</item>
    </style>

</resources>
