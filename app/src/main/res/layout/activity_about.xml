<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="32dp">

    <!-- Logo o Icono Grande -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_app_name"
        app:layout_constraintVertical_chainStyle="packed"
        android:contentDescription="Logo App" />

    <!-- Nombre de la App -->
    <TextView
        android:id="@+id/text_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alacena Inteligente"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_logo"
        app:layout_constraintBottom_toTopOf="@id/text_version"/>

    <!-- Versión -->
    <TextView
        android:id="@+id/text_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versión 2.3.0"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_app_name"
        app:layout_constraintBottom_toTopOf="@id/text_desc"/>

    <!-- Descripción -->
    <TextView
        android:id="@+id/text_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sistema IoT para la gestión inteligente de inventario doméstico.\n\nControla tu stock, genera listas de compras y recibe alertas en tiempo real."
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:lineSpacingExtra="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_version"
        app:layout_constraintBottom_toTopOf="@id/btn_cerrar"/>

    <!-- Botón Cerrar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cerrar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Cerrar"
        android:textSize="16sp"
        android:layout_marginTop="48dp"
        app:cornerRadius="12dp"
        app:backgroundTint="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_desc"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Créditos pequeños al final (Opcional) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2025 Alacena Project"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>