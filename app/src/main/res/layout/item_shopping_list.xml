<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/image_producto"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/imagen_del_producto"
            android:background="@drawable/rounded_image_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/text_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nombre_del_producto"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#212121"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/image_producto"
            app:layout_constraintTop_toTopOf="@id/image_producto"
            app:layout_constraintEnd_toStartOf="@id/check_comprado" />

        <!-- Detalle -->
        <TextView
            android:id="@+id/text_detalle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/detalle_categoria_unidades"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/image_producto"
            app:layout_constraintTop_toBottomOf="@id/text_nombre"
            app:layout_constraintEnd_toStartOf="@id/check_comprado" />

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/check_comprado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:buttonTint="@color/teal_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Botones -->
        <LinearLayout
            android:id="@+id/layout_botones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/image_producto"
            app:layout_constraintTop_toBottomOf="@id/text_detalle"
            app:layout_constraintBottom_toBottomOf="@id/image_producto">

            <ImageButton
                android:id="@+id/btn_editar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/editar"
                android:src="@drawable/ic_edit"
                app:tint="#FFC107"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btn_eliminar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="14dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/eliminar"
                android:src="@drawable/ic_delete"
                app:tint="@color/red"
                android:padding="8dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
