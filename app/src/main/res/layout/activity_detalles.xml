<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface"
    tools:context=".DetallesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Nombre grande -->
        <TextView
            android:id="@+id/text_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto"
            android:textColor="?attr/colorOnSurface"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/image_product"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del producto"
            android:background="#E0E0E0"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@id/text_nombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" />

        <!-- Marca -->
        <TextView
            android:id="@+id/label_marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/image_product"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/text_marca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_bg"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="12dp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/label_marca"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Categoría -->
        <TextView
            android:id="@+id/label_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_marca"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/text_categoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_bg"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="12dp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/label_categoria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cantidad -->
        <TextView
            android:id="@+id/label_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_categoria"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/text_cantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_bg"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="12dp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/label_cantidad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Stock actual -->
        <TextView
            android:id="@+id/label_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock actual"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_cantidad"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/text_stock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_bg"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="12dp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/label_stock"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Stock mínimo -->
        <TextView
            android:id="@+id/label_stock_minimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock mínimo"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_stock"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/text_stock_minimo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_bg"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="12dp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/label_stock_minimo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Código de barras -->
        <TextView
            android:id="@+id/label_codigo_barras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de barras"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_stock_minimo"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/text_codigo_barras"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_bg"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="12dp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/label_codigo_barras"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/text_codigo_barras"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Editar"
                android:textAllCaps="false"
                android:icon="@drawable/ic_edit"
                app:iconTint="@color/white"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/teal_700"
                android:layout_marginEnd="8dp"
                android:paddingVertical="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:icon="@drawable/ic_delete"
                app:iconTint="@color/white"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/red"
                android:paddingVertical="12dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
