<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true"
    tools:context=".view.DetallesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Nombre del producto -->

        <!-- Imagen -->

        <TextView
            android:id="@+id/text_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/nombre_del_producto"
            android:textColor="?attr/colorOnSurface"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_bg"
            android:clipToOutline="true"
            android:contentDescription="@string/imagen_del_producto"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_nombre" />

        <!-- Marca -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_marca"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/marca"
            app:boxBackgroundColor="?attr/colorSurface"
            app:boxStrokeColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_product">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Categoría -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_categoria"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/categoria"
            app:boxBackgroundColor="?attr/colorSurface"
            app:boxStrokeColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_marca">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Cantidad -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_cantidad"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/cantidad"
            app:boxBackgroundColor="?attr/colorSurface"
            app:boxStrokeColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_categoria">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Stock actual -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_stock"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/stock_actual"
            app:boxBackgroundColor="?attr/colorSurface"
            app:boxStrokeColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_cantidad">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Stock mínimo -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_stock_minimo"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/stock_minimo"
            app:boxBackgroundColor="?attr/colorSurface"
            app:boxStrokeColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_stock">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_stock_minimo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Código de barras -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_codigo_barras"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/codigo_de_barras"
            app:boxBackgroundColor="?attr/colorSurface"
            app:boxStrokeColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_stock_minimo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_codigo_barras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones Editar / Eliminar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_layout_codigo_barras">

            <!-- EDITAR -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:icon="@drawable/ic_edit"
                android:paddingVertical="12dp"
                android:text="@string/editar"
                android:textAllCaps="false"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                app:iconTint="@color/white" />

            <!-- ELIMINAR -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:icon="@drawable/ic_delete"
                android:paddingVertical="12dp"
                android:text="@string/eliminar"
                android:textAllCaps="false"
                app:backgroundTint="@color/red"
                app:cornerRadius="12dp"
                app:iconTint="@color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
