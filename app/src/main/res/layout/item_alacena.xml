<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Imagen del producto (Ancla Principal) -->
        <ImageView
            android:id="@+id/image_product"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded_image_bg"
            android:scaleType="centerCrop"
            android:contentDescription="@string/imagen_del_producto" />

        <!-- Botones de acciÃ³n (Alineados con el fondo de la imagen) -->
        <!-- Esto evita que la tarjeta se agrande hacia abajo innecesariamente -->
        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/image_product"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <ImageButton
                android:id="@+id/btn_edit_product"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/editar_producto"
                app:tint="#FFC107" />

            <ImageButton
                android:id="@+id/btn_delete_product"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/eliminar_producto"
                app:tint="@color/red" />
        </LinearLayout>

        <!-- Detalles del producto -->
        <!-- toStartOf=layout_buttons evita que el texto choque con los iconos -->
        <LinearLayout
            android:id="@+id/layout_item_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@id/image_product"
            android:layout_toStartOf="@id/layout_buttons"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_del_producto"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/text_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marca_ejemplo"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stock_5"
                android:textColor="@color/primary_dark"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>